
const quizQuestions = [
    { question: "What is the longest river in world?", answer: "Nile River" },
    { question: "Which country has the most time zones?", answer: "France" },
    { question: "Who wrote the Ramayana?", answer: "valmiki" },
    { question: "which company create Android?", answer: "Google" },
    { question: "Which language is used to style webpages?", answer: "css" }
]

function runQuiz() {

    let score = 0; 
    for (let i = 0; i < quizQuestions.length; i++) {
        let userAnswer = prompt(quizQuestions[i].question);
        if (userAnswer === null) {
            userAnswer = "";
        }

        userAnswer = userAnswer.toLowerCase().trim();

        if (userAnswer === quizQuestions[i].answer) {
            score++;
            alert("Correct! ðŸ‘");
        } else {
            alert("Wrong âŒ\nCorrect Answer: " + quizQuestions[i].answer);
        }
    }

    alert("Quiz Completed!\nYour Final Score: " + score + " / " + quizQuestions.length);
}


runQuiz();
